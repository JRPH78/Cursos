---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
import Badge from "../components/Badge.astro";
import SocialPill from "../components/SocialPill.astro";
import LinkedinIcon from "../components/icons/Linkedin.astro";
import GithubIcon from "../components/icons/Github.astro";
import MailIcon from "../components/icons/Mail.astro";
import FaceIcon from "../components/icons/Facebook.astro";
import InstaIcon from "../components/icons/Insta.astro";
import Experiencia from "../components/Experiencia.astro";
import SectionContainer from "../components/SectionContainer.astro";
import Case from "../components/icons/Case.astro";
import Proyectos from "../components/Proyectos.astro";
import Dev from "../components/icons/Dev.astro";
import Perfil from "../components/icons/perfil.astro";
import SobreMi from "../components/SobreMi.astro";
---

<Layout title="Portafolio de Rafael Perez - Ingeniero de Software">
  <main class="px-4">
    <SectionContainer class="py-40 md:py-36" >
      <div class="max-w-xl">
        <div class="flex gap-4 mb-4">
          <img
            class="rounded-full shadow-lg size-16"
            src="/meprofile.webp"
            alt="JOSE RAFAEL"
          />
          <a
            href="https://www.linkedin.com/in/jose-rafael-perez-hernandez-7245a52bb/"
            target="_blank"
            rel="noopener"
            class="flex items-center transition md:justify-center md:hover:scale-105"
          >
            <Badge>Disponible para Trabajar</Badge>
          </a>
        </div>
      </div>

      <h1
        class="text-white text-5xl font-bold flex flex-row gap-x-4 pb-10 tracking-tight"
      >
        Hey, soy Rafael Perez
      </h1>
      <p
        class="mt-6 text-xl [&>strong]:text-yellow-200 [&>strong]:font-semibold text-gray-100"
      >
        <strong>Ingeniero de Software</strong>, Desarrollador Web, Full-Stack.
        De Colima, MÃ©xico. Soy un <strong>solucionador </strong> de problemas creativo
        y orientado a resultados. Egresado de la Universidad de Colima
      </p>
      <nav class="flex flex-wrap gap-4 mt-8">
        <SocialPill
          href="https://www.linkedin.com/in/jose-rafael-perez-hernandez-7245a52bb/"
        >
          <LinkedinIcon class="size-4" />linkedin
        </SocialPill>

        <SocialPill href="https://github.com/JRPH78/">
          <GithubIcon class="size-4" />Github
        </SocialPill>

        <SocialPill href="https://www.facebook.com/rafita.perez.988">
          <FaceIcon class="size-4" />Facebook
        </SocialPill>

        <SocialPill href="mailto:joserafaelph78@gmail.com?Subject=Interesado">
          <MailIcon class="size-4" />joserafaelph78@gmail.com
        </SocialPill>
      </nav>
    </SectionContainer>

    <div class="space-y-20">
      <SectionContainer id="experiencia" class="py-10 md:py-10">
        <h2 class="text-2xl font-semibold mb-6 flex gap-x-4 items-center">
          <Case class="size-8" />
          Experiencia Laboral
        </h2>
        <Experiencia />
      </SectionContainer>

      <SectionContainer id="proyectos" class="py-10 md:py-10">
        <h2
          class="flex items-center mb-6 text-3xl font-semibold gap-x-3 text-white"
        >
          <Dev />
          Proyectos
        </h2>
        <Proyectos />
      </SectionContainer>

      <SectionContainer id="sobre-mi" class="py-10 md:py-10">
        <h2
          class="flex items-center mb-6 text-3xl font-semibold gap-x-3 text-white"
        >
          <Perfil />
          Sobre Mi
        </h2>
        <SobreMi />
      </SectionContainer>
    </div>
  </main>
</Layout>
