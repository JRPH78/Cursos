@model BlogCore.Models.Categoria

@{
    ViewData["Title"] = "Editar categoria";
}

<br />
<br />
<h3 class="text-center">Editar una categoria</h3>

<form asp-action="Edit" method="POST">
    <div class="row px-2 offset-1 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="col-10 offset-1 mt-4">
            <div class="form-group row">
                <div class="col-3 align-self-center">
                    <label asp-for="Nombre" class="control-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Nombre" class="form-control" placeholder="Ingrese el Nombre" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row mt-1">
                <div class="col-3 align-self-center">
                    <label asp-for="Orden" class="control-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Orden" class="form-control" placeholder="Ingrese el Orden" />
                    <span asp-validation-for="Orden" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="form-group row justify-content-end mt-3">
            <div class="col-4 ">
                <div class="row">
                    <div class="col ">
                        <a asp-action="Index">Volver atras</a>
                    </div>
                    <div class="col-7">
                        <button type="submit" class="btn btn-primary form-control"> Editar Categoria</button>
                    </div>
                </div>
            </div>
        </div>
    </div>


</form>

