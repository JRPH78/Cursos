@{
	ViewData["Title"] = "Lista de Articulos";
}
<div class="container mt-4">
	<div class="row">
		<div class="col-8">
			<h2 class="text-primary">Lista de Articulos</h2>
		</div>
		<div class="col-4 text-right">
			<a asp-action="Create" class="btn btn-secondary"> <i class="fa-solid fa-plus"></i> Crear nuevo Articulo </a>
		</div>
	</div>
	<br />
	<br />

	<table id="tblArticulos" class="table table-striped table-bordered" style="width: 100%">
		<thead>
			<tr>
				<th>Id</th>
				<th>Nombre</th>
				<th>Categoria</th>
				<th>fecha de creacion</th>
				<th>acciones</th>

			</tr>
		</thead>

	</table>
</div>

@section Scripts {
	<script src="~/js/articulos.js"></script>
}







