@model CrudNet8MVC.Models.Contacto

@{
    ViewData["Title"] = "Detalle contacto";
}
<h1 class="text-center"> Contacto con .NET 8 (Net Core MVC) </h1>


<div class="row">
    <div class="offset-12">
        <div class="card border">
            <div class="card-header bg-dark">
                <h3 class="text-white"> <strong>Detalle Uuario</strong></h3>
            </div>

            <div class="card-body">
                <ul class="list-group">
                    <li class="list-group-item"><strong>Nombre: </strong>@Html.DisplayFor(mbox=>mbox.Nombre)</li>
                    <li class="list-group-item"><strong>Numero de telefono: </strong>@Html.DisplayFor(mbox => mbox.Telefono)</li>
                    <li class="list-group-item"><strong>Numero de celular: </strong>@Html.DisplayFor(mbox => mbox.Celular)</li>
                    <li class="list-group-item"><strong>Email: </strong>@Html.DisplayFor(mbox => mbox.Email)</li>
                    <li class="list-group-item"><strong>Fecha: </strong>@Html.DisplayFor(mbox => mbox.FechaCreacion)</li>

                </ul>


                <a asp-controller="Inicio" asp-action="Index">Volver atras</a>

            </div>
        </div>
    </div>
</div>